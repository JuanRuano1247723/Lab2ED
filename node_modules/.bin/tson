#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/env" ]; then
  exec "$basedir/env" node "$basedir/../tson/bin/tson.js" "$@"
else 
  exec env node "$basedir/../tson/bin/tson.js" "$@"
fi
